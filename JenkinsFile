pipeline {
    agent any
    stages {
        stage('Build JAR') {
            steps {
                bat 'mvn clean package'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.withTool('docker') {
                        docker.withRegistry('https://petclinicdylan.azurecr.io', 'acr-credentials') {
                            def customImage = docker.build("petclinicdylan.azurecr.io/spring-petclinic:${env.BUILD_ID}")
                            customImage.push()
                        }
                    }
                }
            }
        }
    }
}